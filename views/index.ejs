<br>
    <input type="submit" value="CrÃ©er un nouvel utilisateur" class="cursor-pointer bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
</form>
</div>
<div class="flex justify-center">
<ul role="list" class="divide-y divide-gray-200">
    <% users.forEach((user) => { %> 
        <li class="py-4 flex">
            <img class="h-10 w-10 rounded-full" src="<%= user.avatar %>>" alt="">
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-500"><%= user.username %></p>
              <p class="text-sm text-gray-300"><%= user.age %> ans</p>
              <p class="text-sm text-gray-300"><%= user.email %></p>
              <a  class="items-right text-sm text-red-600" href="delete/<%= user.username %>">Supprimer ce membre</a>
            </div>
          </li>
        
      <%}); %>
</ul>


</div></div>
</body>
</html>